{
  "name": "heycli",
  "version": "0.2.1",
  "description": "A human-readable interface for terminal commands",
  "keywords": [
    "cli",
    "command",
    "glob",
    "human",
    "ls",
    "mkdir",
    "mkdirp",
    "readable",
    "rm",
    "rmrf",
    "rimraf",
    "terminal",
    "create",
    "delete",
    "destroy",
    "find",
    "list",
    "make",
    "remove",
    "trash"
  ],
  "engines": {
    "node": ">=8"
  },
  "license": "MIT",
  "repository": "github:chrisdothtml/hey",
  "main": "lib/index.js",
  "files": [
    "bin",
    "lib"
  ],
  "bin": {
    "hey": "bin/hey"
  },
  "scripts": {
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard '*(lib|test)/**/*.js' --verbose | snazzy",
    "prepush": "npm run lint",
    "test": "ava -v",
    "test+coverage": "nyc npm test"
  },
  "ava": {
    "require": "esm"
  },
  "nyc": {
    "require": "esm"
  },
  "standard": {
    "env": "mocha"
  },
  "dependencies": {
    "fs-extra": "^7.0.0",
    "globby": "^8.0.1",
    "kleur": "^2.0.2",
    "trash": "^4.3.0"
  },
  "devDependencies": {
    "ava": "^0.25.0",
    "coveralls": "^3.0.0",
    "esm": "^3.0.84",
    "husky": "^0.14.3",
    "nyc": "^11.7.1",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  }
}
