{
  "name": "heycli",
  "version": "0.1.0",
  "description": "A human-readable interface for terminal commands",
  "keywords": [
    "cli",
    "command",
    "glob",
    "human",
    "readable",
    "terminal"
  ],
  "engines": {
    "node": ">=8"
  },
  "license": "MIT",
  "repository": "github:chrisdothtml/hey",
  "main": "lib/index.js",
  "bin": {
    "hey": "bin/hey"
  },
  "scripts": {
    "coveralls": "nyc report --reporter=text-lcov | coveralls",
    "lint": "standard '*(lib|test)/**/*.js' --verbose | snazzy",
    "prepush": "npm run lint",
    "test": "mocha --recursive -R list -t 5s",
    "test+coverage": "nyc npm test"
  },
  "standard": {
    "env": "mocha"
  },
  "dependencies": {
    "chalk": "^2.3.2",
    "globby": "^8.0.1",
    "pfs": "^2.1.2",
    "shelljs": "^0.8.1",
    "trash": "^4.3.0"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "coveralls": "^3.0.0",
    "del": "^3.0.0",
    "husky": "^0.14.3",
    "mocha": "^5.0.5",
    "nyc": "^11.7.1",
    "snazzy": "^7.1.1",
    "standard": "^11.0.1"
  }
}
